<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantProfile">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/company_header_holder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/rectangle2"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/merchant_profile_image_profile_md"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/nav_header_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">
            </de.hdodenhof.circleimageview.CircleImageView>




            <TextView
                android:id="@+id/merchant_name_profile_top_md"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/merchant_profile_image_profile_md"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:text=""
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/merchant_toal_products_md"
                android:layout_below="@+id/merchant_name_profile_top_md"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:text=""
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_header_holder">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/first_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/merchant_call"
                        android:layout_marginBottom="10dp"
                        >

                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/merchant_call_button"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_call"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_round"/>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account Information"
                        android:layout_below="@+id/merchant_call"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        />

                    <View
                        android:id="@+id/hr"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#050D1E"
                        android:layout_below="@+id/account"/>


                    <LinearLayout
                        android:id="@+id/Account_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/hr"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/merchant_name_profile_TextView_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Account_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/Account_first">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/merchant_phone_profile_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Account_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/Account_second">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/merchant_email_profile_account_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Business Information"
                        android:layout_marginTop="40dp"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_below="@id/Account_third"
                        />

                    <View
                        android:id="@+id/hr1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#050D1E"
                        android:layout_below="@+id/business"/>


                    <LinearLayout
                        android:id="@+id/business_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/hr1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business Name:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/business_name_profile_TextView_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/business_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/business_first">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business Details:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/business_details_profile_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000" />


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/business_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/business_second">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business Address:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/business_address_profile_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000" />



                    </LinearLayout>




                    <TextView
                        android:id="@+id/payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Information"
                        android:layout_marginTop="40dp"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_below="@id/business_third"
                        />

                    <View
                        android:id="@+id/hr2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#050D1E"
                        android:layout_below="@+id/payment"/>


                    <LinearLayout
                        android:id="@+id/payment_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/hr2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bkash:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/bkash_num_profile_TextView_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/payment_first">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rocket:"
                            android:textSize="20sp"
                            android:textColor="#010220"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:id="@+id/merchant_rocket_num_profile_md"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="40dp"/>


                    </LinearLayout>








                </RelativeLayout>








            </ScrollView>




        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>