<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOmFragment">




    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >


            <TextView
                android:id="@+id/manInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill Up the Informations"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/m_name_MD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Enter Manager Name"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />


            <EditText
                android:id="@+id/m_nid_MD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Enter National ID No"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/m_email_MD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Enter Manager Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/m_phone_MD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Enter Manager Phone No"
                android:inputType="number"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/m_pass_MD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Enter Manager Password"
                android:inputType="textPassword"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />

            <Spinner
                android:id="@+id/district_om_add_Md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foregroundTint="#222"
                android:background="#001c47"
                android:layout_marginBottom="10dp"
                android:padding="5dp"

                />



            <Button
                android:id="@+id/addOmButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD Manager"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/blue_long_buttonshape"/>



        </LinearLayout>
    </ScrollView>


</FrameLayout>