<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:padding="20dp"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/om_name_md_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Om Name"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/om_location_md_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager Email:"
            android:textColor="#FF3C00"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/om_email_md_bottomsheet"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/f1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager Phone:"
            android:textColor="#FF3C00"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/om_phone_md_bottomsheet"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/f8"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Password:"
            android:textColor="#FF3C00"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/om_pass_md_bottomsheet"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/f2"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager NID:"
            android:textColor="#FF3C00"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/om_nid_md_bottomsheet"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/f3"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District:"
            android:textColor="#FF3C00"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/om_district_md_bottomsheet"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/f5"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/om_call_button"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_call"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_round"/>

    </RelativeLayout>





</LinearLayout>